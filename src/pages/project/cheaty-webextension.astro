---
import Layout from "@layouts/MainLayout.astro";
import { astroI18n, t } from "astro-i18n";
import { Image } from "astro:assets";
import actionModeImage from "@assets/action-mode.png";
import hideActionImage from "@assets/hide-action.png";
import passwordOnActionImage from "@assets/password-on-action.png";
import passwordOffActionImage from "@assets/password-off-action.png";
import BasicLink from "@components/BasicLink.astro";

astroI18n.init(Astro);
---

<Layout title={"Cheaty"} pathname="project">
	<main>
		<section id="introduction">
			<h1>Cheaty</h1>
			<h2>{t("cheaty.catch_phrase")}</h2>
			<p>{t("cheaty.description")}</p>
			<div>
				<BasicLink
					text={t("global.website")}
					href="https://cheaty.nicolasrenault.com"
					title={t("cheaty.cheaty_website")}
					target="_blank"
				/>
				<BasicLink
					text={t("global.see_on_github")}
					href="https://github.com/NicolasRenault/cheaty-webextension"
					title={t("cheaty.cheaty_github")}
					target="_blank"
				/>
			</div>
		</section>

		<section id="examples">
			<h3>{t("cheaty.hide")}</h3>
			<div class="images-container">
				<Image
					src={actionModeImage}
					alt={t("cheaty.action_mode")}
					width="700"
					height="436.80"
				/>
				<Image
					src={hideActionImage}
					alt={t("cheaty.hide_action")}
					width="700"
					height="436.80"
				/>
			</div>
			<h3>{t("cheaty.password")}</h3>
			<div class="images-container">
				<Image
					src={passwordOnActionImage}
					alt={t("cheaty.hide_password")}
					width="700"
					height="436.80"
				/>
				<Image
					src={passwordOffActionImage}
					alt={t("cheaty.show_password")}
					width="700"
					height="436.80"
				/>
			</div>
		</section>

		<section id="links">
			<BasicLink
				text={t("global.learn_more")}
				href="https://cheaty.nicolasrenault.com"
				title={t("cheaty.cheaty_website")}
				target="_blank"
			/>
			<BasicLink
				text={t("global.download")}
				href="https://cheaty.nicolasrenault.com/download"
				title={t("cheaty.cheaty_download")}
				target="_blank"
			/>
			<BasicLink
				text={t("global.see_codesources")}
				href="https://github.com/NicolasRenault/cheaty-webextension"
				title={t("cheaty.cheaty_codesources")}
				target="_blank"
			/>
		</section>
	</main>
</Layout>

<style lang="scss">
	main {
		#introduction {
			div {
				display: flex;
				gap: 1rem;

				font-size: 1.5rem;
			}
		}

		#examples {
			display: flex;
			flex-direction: column;
			gap: 2rem;

			margin-top: 3rem;

			h3 {
				font-size: 1.5rem;
			}
		}

		#links {
			display: inline-flex;
			gap: 1.5rem;
			margin-top: 3rem;

			font-size: 1.5rem;
		}
	}

	@media (width <= 768px) {
		main {
			#introduction {
				div {
					font-size: 1rem;
				}
			}

			#examples {
				margin-top: 2rem;
				h3 {
					font-size: 1.3rem;
				}

				:global(img) {
					aspect-ratio: 125 / 78;
					width: 100%;
					height: 100%;
				}
			}

			#links {
				font-size: 1.2rem;
			}
		}
	}

	@media (width <= 425px) {
		main {
			#introduction {
				div {
					font-size: 1rem;
				}
			}

			#examples {
				h3 {
					font-size: 1.2rem;
				}

				:global(img) {
					aspect-ratio: 125 / 78;
					width: 100%;
					height: 100%;
				}
			}

			#links {
				font-size: 1rem;

				display: grid;
				grid-template-columns: 50% 50%;
			}
		}
	}
</style>
