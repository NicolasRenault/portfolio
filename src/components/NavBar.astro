---
import { defaultLang, getLangFromUrl, getUrlWithTranslation, switchLangFromUrl } from "@utils";
import { astroI18n, t } from "astro-i18n";
import { Icon } from "astro-icon";

astroI18n.init(Astro);

const lang = getLangFromUrl(Astro.url);
---

<nav>
	<ul>
		<li>
			<a
				href={getUrlWithTranslation("", lang)}
				title="Homepage"
				class:list={[{ active: Astro.url.pathname == getUrlWithTranslation("", lang) }]}
			>
				{t("navbar.homepage")}
			</a>
		</li>

		<li>
			<a
				href={getUrlWithTranslation("projects", lang)}
				title="Projects"
				class:list={[
					{
						active: Astro.url.pathname == getUrlWithTranslation("projects", lang),
					},
				]}
			>
				{t("navbar.projects")}
			</a>
		</li>
		<li>
			<a
				href="mailto:contact@nicolasrenault.com?subject=Hello there!&body=Hey,"
				title="Contact me"
				target="_blank"
				rel="noopener noreferrer"
			>
				{t("navbar.contact")}
			</a>
		</li>
	</ul>
	<div id="left-container">
		<a
			id="github-link"
			href="https://github.com/NicolasRenault"
			title="Github link"
			target="_blank"
		>
			<Icon name="mdi:github" />
		</a>
		<a
			id="translation-link"
			href={switchLangFromUrl(Astro.url, lang === defaultLang ? "fr" : "en")}
			title="Switch language">{lang === defaultLang ? "fr" : "en"}</a
		>
		{/* TODO add toggle for horizontal scroll */}
	</div>
</nav>

<style lang="scss">
	nav {
		display: flex;
		justify-content: space-between;
		padding: 1rem 1.5rem;
		align-items: center;
		font-size: 1.25rem;

		max-width: 85rem;
		margin-left: auto;
		margin-right: auto;
		ul {
			display: flex;
			align-items: center;
			gap: 5rem;
			list-style: none;
		}

		a,
		button {
			text-decoration: none;
			color: var(--text-rgb);
			text-transform: uppercase;

			border: none;
			background: none;

			&.active {
				border-bottom: 3px solid var(--secondary-rgb);
			}
		}

		a,
		button,
		li {
			transition: all 0.2s ease-in-out;

			&:hover {
				transform: translateY(-2px);
			}
		}

		#left-container {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 2rem;
			align-items: center;
		}
	}

	#github-link {
		display: flex;

		svg {
			width: 1.55rem;
			height: 1.55rem;
		}
	}
	nr-logo {
		color: var(--text-rgb);
	}
</style>
