---
import { defaultLang, getLangFromUrl, getUrlWithTranslation, switchLangFromUrl } from "@utils";
import { astroI18n, t } from "astro-i18n";
import { Icon } from "astro-icon";

astroI18n.init(Astro);

const lang = getLangFromUrl(Astro.url);
---

<nav>
	<ul>
		<li class:list={[{ active: Astro.url.pathname == getUrlWithTranslation("", lang) }]}>
			<a href={getUrlWithTranslation("", lang)} title="Homepage">
				{t("navbar.homepage")}
			</a>
		</li>

		<li
			class:list={[
				{
					active: Astro.url.pathname == getUrlWithTranslation("projects", lang),
				},
			]}
		>
			<a href={getUrlWithTranslation("projects", lang)} title="Projects">
				{t("navbar.projects")}
			</a>
		</li>
		<li>
			<a
				href="mailto:contact@nicolasrenault.com?subject=Hello there!&body=Hey,"
				title="Contact me"
				target="_blank"
				rel="noopener noreferrer"
			>
				{t("navbar.contact")}
			</a>
		</li>
	</ul>
	<div id="left-container">
		<a
			id="github-link"
			href="https://github.com/NicolasRenault"
			title="Github link"
			target="_blank"
		>
			<Icon name="mdi:github" />
		</a>
		<a
			id="translation-link"
			href={switchLangFromUrl(Astro.url, lang === defaultLang ? "fr" : "en")}
			title="Switch language">{lang === defaultLang ? "fr" : "en"}</a
		>
		{/* TODO add toggle for horizontal scroll */}
	</div>
</nav>

<style lang="scss">
	nav {
		display: flex;
		justify-content: space-between;
		padding: 0 1.5rem;
		align-items: center;
		font-size: 1.25rem;

		max-width: 85rem;
		margin-left: auto;
		margin-right: auto;

		ul {
			display: flex;
			align-items: center;
			gap: 5rem;
			list-style: none;

			li {
				position: relative;
				// overflow: hidden;
				// display: inline-block;
				// height: max-content;

				&::before {
					content: "";
					display: block;
					position: absolute;
					bottom: -0.25rem;
					margin-top: 0.5rem;
					width: 0;
					height: 3px;
					background: var(--text-rgb);
					transition: width 0.3s;
				}
				&.active::before {
					transition: width 0.4s;
				}
				&:hover::before {
					width: 100%;
					// background-color: var(--text-rgb);
				}

				&.active::after {
					content: "";
					display: block;
					position: absolute;
					bottom: -0.25rem;
					right: 0;
					margin-top: 0.5rem;
					width: 100%;
					height: 3px;
					background: var(--secondary-rgb);
					z-index: -1;
					transition: width 0.5s;
				}
				&:hover::after {
					transition: width 0.3s;
					width: 0;
				}
			}
		}

		a,
		button {
			text-decoration: none;
			color: var(--text-rgb);
			text-transform: uppercase;

			border: none;
			background: none;

			&.active {
				border-bottom: 3px solid var(--secondary-rgb);
			}
		}

		#left-container {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 2rem;
			align-items: center;
			a,
			button {
				transition: all 0.2s ease-in-out;

				&:hover {
					transform: translateY(-2px);
				}
			}
		}
	}

	#github-link {
		display: flex;

		svg {
			width: 1.55rem;
			height: 1.55rem;
		}
	}
	nr-logo {
		color: var(--text-rgb);
	}
</style>
