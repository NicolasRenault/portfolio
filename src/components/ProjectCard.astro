---
export interface Props {
	title: string;
	subtitle: string | null;
	icon: string;
	project_link: string;
	github_link: string;
	description: string;
	technos: string[];
}

const { title, subtitle, icon, project_link, github_link, description, technos } = Astro.props;
---

<a id={title} href={project_link} title={title} target="_blank">
	<h3>{title}</h3>
	{subtitle && <h4>{subtitle}</h4>}
	<img src={icon} alt={`${title} icon`} width="32px" />
	<p>{description}</p>
	<a href={github_link} title={"Github link for " + title} target="_blank">Github</a>
	<!-- <div>
		{technos.map((techno) => <span>{techno}</span>)}
	</div> -->
</a>

<style>
	img,
	svg {
		color: var(--text-rgb);
	}
</style>
