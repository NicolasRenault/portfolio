---
export interface Props {
	title: string;
	subtitle: string | null;
	icon: string;
	project_link: string;
	github_link: string;
	description: string;
	technos: string[];
}

const { title, subtitle, icon, project_link, github_link, description, technos } = Astro.props;
---

<div id={title} class="box">
	<a href={project_link} title={title} target="_blank">
		<h3>{title}</h3>
		{subtitle && <h4>{subtitle}</h4>}
		<img src={icon} alt={`${title} icon`} width="32px" />
		<p>{description}</p>
	</a>
	<a href={github_link} title={"Github link for " + title} target="_blank">Github</a>
	<div class="bg"></div>
</div>

<style lang="scss">
	.box {
		display: flex;
		position: relative;
		flex-direction: column;
		padding: 1rem;
		width: 40%;
		color: var(--text-rgb);
		background-color: transparent;
		margin: 1rem;
		z-index: 1;

		.bg {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			border-radius: 0.5rem;
			background-color: var(--text-rgb);
			opacity: 5%;
			z-index: 0;
		}

		a {
			color: var(--text-rgb);
			text-decoration: none;
		}
		img,
		svg {
			color: var(--text-rgb);
		}
	}
</style>
