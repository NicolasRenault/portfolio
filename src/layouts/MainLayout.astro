---
import "@styles/normalize.css";
import "@styles/global.scss";
import BaseHead from "@components/BaseHead.astro";
import NavBar from "@components/NavBar.astro";
import Footer from "@components/Footer.astro";
import GrainyFilter from "@components/GrainyFilter.astro";
import { getLangFromUrl } from "@utils";
import Blob from "@components/Blob.astro";

export interface Props {
	title: string | undefined;
	pathname?: string;
}

const { title, pathname } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!DOCTYPE html>
<html lang={lang}>
	<BaseHead title={title} />
	<body>
		<NavBar />
		<div id="animation-container">
			<section id="main">
				<slot />
			</section>
			<Footer navigate={pathname} />
			<Blob top="50vh" left="70%" rotate="random" />
			<Blob top="170vh" left="-20%" rotate="random" />
			<Blob top="400vh" left="70%" rotate="random" />
		</div>
		<GrainyFilter />
	</body>
</html>
