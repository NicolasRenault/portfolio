{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@data/*": ["src/data/*"],
            "@styles/*": ["src/styles/*"],
            "@utils": ["src/utils.ts"],
            "@assets/*": ["src/assets/*"],
            "@translate-description": ["src/translate-description.ts"]
        }
    }
}
